<div class="card w-50">
  <div class="card-header row">
    <div class="col align-self-center">
      Account      
    </div>
    <% if @account %>
      <div class="col p-2">
        <%= button_to home_close_account_path(account_id: @account.id), class: "btn btn-primary" do %>
          Close Account
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="card-body">
    <h5 class="card-title">R$ <%= @account ? cent_to_real(@account.account_balance) : 0 %></h5>
  </div>
</div>
